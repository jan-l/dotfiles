# Changing Window Focus

# launch applications

# Alacritty 
alt - a : open -a /Applications/Alacritty.app/Contents/MacOS/alacritty
cmd - return : open -a /Applications/Alacritty.app/Contents/MacOS/alacritty

#Spotify
alt + shift - s : open -a "Spotify"
# Chrome
alt - b : open -a "Google Chrome" --args --profile-directory="Default"
alt + shift - b : open -n -a "Google Chrome" --args --profile-directory="Default"
alt + shift - m : open -n -a "Google Chrome" --args --profile-directory="Profile 5"

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

alt - tab : yabai -m space --focus recent

#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# send to display and follow focus
ctrl + cmd - x  : yabai -m window --display recent && yabai -m display --focus recent
ctrl + cmd - z  : yabai -m window --display prev && yabai -m display --focus prev
ctrl + cmd - c  : yabai -m window --display next && yabai -m display --focus next

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270
# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis
# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis
# toggle window float
shift + alt - t : \
  yabai -m window --toggle float --grid 4:4:1:1:2:2; \
  # yabai -m window --toggle border

# toggle sticky(+float), topmost, picture-in-picture
shift + alt - p : yabai -m window --toggle pip 

# maximize a window
shift + alt - f : yabai -m window --toggle zoom-fullscreen
shift + cmd - f : yabai -m window --toggle native-fullscreen
# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

shift + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# increase region size
shift + alt - a : \
    yabai -m window --resize left:-100:0 ; \
    yabai -m window --resize right:-100:0
shift + alt - s : yabai -m window --resize bottom:0:100
shift + alt - w : yabai -m window --resize top:0:-100
shift + alt - d : yabai -m window --resize right:100:0; \
                  yabai -m window --resize left:100:0 
# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

shift + alt - b : yabai -m window --insert south
shift + alt - v : yabai -m window --insert east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;
# focus space
ctrl - 1 : yabai -m space --focus 1;
ctrl - 2 : yabai -m space --focus 2;
ctrl - 3 : yabai -m space --focus 3;
ctrl - 4 : yabai -m space --focus 4;
ctrl - 5 : yabai -m space --focus 5;
# move window to space 
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;

# stop/start/restart yabai
ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai
ctrl + alt - r : brew services restart yabai
